<ForgotPassword>:

    email: email
    canvas.before:
        BorderImage:
            border: 10, 10, 10, 10
            source: 'photo/light.jpg'
            pos: self.pos
            size: self.size

    FloatLayout:
        Label:
            text: "Email"
            bold: True
            markup: True
            font_size: (root.width**2 + root.height**2) / 15**4
            pos_hint: {"x":0.13, "top":0.65}
            size_hint: 0.3, 0.12
            color:[0, 0, 0, 1]

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 14**4
            multiline:False
            use_bubble:True
            valign: 'middle'
            halign: 'center'
            background_color: [0.0,0.0,0.0,0.07]
            foreground_color: (0, 0, 0, 0.6)
            pos_hint: {"x":0.25, "top":0.57}
            size_hint: 0.5, 0.08

        Button:
            text: "[font=font/bottomfont.ttf]Back[/font]"
            markup: True
            pos_hint:{"x":0.88,"y":.01}
            size_hint:0.11, 0.10
            font_size: (root.width**2 + root.height**2) / 13**4
            background_color: [0.0,0.0,0.0,0.1]
            color: 0,0,0,0.7
            border: 2,2,2,2
            on_release:
                root.manager.transition.direction = "down"
                root.logOut() 

        Button:
            pos_hint:{"x":0.25,"top":0.45}
            size_hint: 0.5, 0.08
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "[font=font/bottomfont.ttf]Send[/font]"
            markup: True
            bold: True
            background_color: [0.0,0.0,0.0,0.28]
            color: 0,0,0,1
            on_release:
                root.sendpass()